{
    "version": "0.2.0",
    "configurations": [
        // ========================================================================
        // Tests - macOS (LLDB)
        // ========================================================================
        {
            "name": "LLDB: Tests (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_message_class",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "Build"
        },
        {
            "name": "LLDB: Tests - Filtered (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_message_class",
            "args": ["--gtest_filter=${input:testFilter}"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "Build"
        },

        // ========================================================================
        // Tests - Linux (GDB)
        // ========================================================================
        {
            "name": "GDB: Tests (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_message_class",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/tests",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "GDB: Tests - Filtered (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_message_class",
            "args": ["--gtest_filter=${input:testFilter}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/tests",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },

        // ========================================================================
        // Examples - macOS (LLDB)
        // ========================================================================
        {
            "name": "LLDB: Publisher Example (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/simple_publisher",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "DYLD_LIBRARY_PATH": "/opt/homebrew/lib:${env:DYLD_LIBRARY_PATH}",
                "DYLD_FALLBACK_LIBRARY_PATH": "/opt/homebrew/lib:/usr/local/lib:/usr/lib"
            },
            "stopOnEntry": false,
            "terminal": "integrated",
            "preLaunchTask": "Build"
        },
        {
            "name": "LLDB: Subscriber Example (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/simple_subscriber",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "DYLD_LIBRARY_PATH": "/opt/homebrew/lib:${env:DYLD_LIBRARY_PATH}",
                "DYLD_FALLBACK_LIBRARY_PATH": "/opt/homebrew/lib:/usr/local/lib:/usr/lib"
            },
            "stopOnEntry": false,
            "terminal": "integrated",
            "preLaunchTask": "Build"
        },

        // ========================================================================
        // Examples - Linux (GDB)
        // ========================================================================
        {
            "name": "GDB: Publisher Example (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/simple_publisher",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "GDB: Subscriber Example (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/simple_subscriber",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "inputs": [
        {
            "id": "testFilter",
            "type": "promptString",
            "description": "GTest filter (e.g., MessageCameraTest.*)",
            "default": "*"
        }
    ]
}
